{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES6",         
    "module": "commonjs",    
    "esModuleInterop": true  ,
     "lib": ["ES2017", "DOM"],       
    "resolveJsonModule": true,      
    "strict": true,
    "skipLibCheck": true            
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}


